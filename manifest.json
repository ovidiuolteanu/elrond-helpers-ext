{
    "manifest_version":3,
    "name": "MultiversX helpers",
    "description": "MultiversX helper tools in extension form",
    "version": "0.1",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "menuaction.js",
        "type": "module"
    },
    "host_permissions": [
        "*.elrond.com/*",
        "*.elrond.ro/*",
        "*.multiversx.com/*"
    ],
    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs",
        "scripting",
        "notifications",
        "storage"
    ],
    "icons": {
        "128": "icon.png"
    }
}